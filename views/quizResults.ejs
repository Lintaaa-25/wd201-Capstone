<h2 class="text-2xl font-semibold mb-4">Your Quiz Results</h2>
<div class="space-y-4">
  <% results.forEach((result, index) => { %>
    <div class="p-4 border rounded shadow <%= result.isCorrect ? 'bg-green-100' : 'bg-red-100' %>">
      <p class="font-semibold mb-1"><%= index+1 %>. <%= result.question %></p>
      <p>Your Answer: <span class="<%= result.isCorrect ? 'text-green-700' : 'text-red-700' %>"><%= result.selectedAnswer %></span></p>
      <% if (!result.isCorrect) { %>
        <p>Correct Answer: <span class="text-green-700"><%= result.correctAnswer %></span></p>
      <% } %>
    </div>
  <% }); %>
</div>

<h1 class="text-2xl font-bold mb-4">Chapter Quiz</h1>
<form method="POST" action="/quiz/submit" class="space-y-6">
  <% quizzes.forEach((quiz, index) => { %>
    <div class="p-4 border rounded shadow">
      <p class="mb-2 font-semibold"><%= index+1 %>. <%= quiz.question %></p>
      <label class="block"><input type="radio" name="answers[<%= quiz.id %>]" value="A" required> <%= quiz.optionA %></label>
      <label class="block"><input type="radio" name="answers[<%= quiz.id %>]" value="B"> <%= quiz.optionB %></label>
      <label class="block"><input type="radio" name="answers[<%= quiz.id %>]" value="C"> <%= quiz.optionC %></label>
      <label class="block"><input type="radio" name="answers[<%= quiz.id %>]" value="D"> <%= quiz.optionD %></label>
    </div>
  <% }); %>
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Submit Quiz</button>
</form>
